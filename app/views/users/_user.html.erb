

  <div id="<%= dom_id user %>">
    <td>
    <p><%= user.name %></p>
    </td>
    <td>
      <p><%= user.email %></p>
      </td>
    <td>
      <p><%= user.canvas_id %></p>
    </td>
    <td>
      <p><%= user.sis_id %></p>
      </td>
    <td>
      <p><%= user.university %></p>
    </td>
    <td>
      <p><%= user.course_code %></p>
    </td>

    <%= form_for user, class:"text-lg inline-block my-3 w-72" do |form| %>
      <td><%= form.check_box :initial_active, onchange: "this.form.requestSubmit();", class: "mr-2 align-middle bg-gray-50 border-gray-300 focus:ring-3 focus:ring-blue-300 h-5 w-5 rounded checked:bg-green-500" %>  </td>
    <td>
      <p><% if (user.initial_answered == true) %>
          <%= image_tag('cheque.png') %>
        <%else%>
          <%= image_tag('cancelar.png') %>
        <%end%></p>
    </td>
      <td><%= form.check_box :midterm_active, onchange: "this.form.requestSubmit();", class: "mr-2 align-middle bg-gray-50 border-gray-300 focus:ring-3 focus:ring-blue-300 h-5 w-5 rounded checked:bg-green-500" %>  </td>
    <td>
      <p><% if (user.midterm_answered == true) %>
          <%= image_tag('cheque.png') %>
        <%else%>
          <%= image_tag('cancelar.png') %>
        <%end%></p>
    </td>

    <td><%= form.check_box :exit_active, onchange: "this.form.requestSubmit();", class: "mr-2 align-middle bg-gray-50 border-gray-300 focus:ring-3 focus:ring-blue-300 h-5 w-5 rounded checked:bg-green-500" %>  </td>

    <td>
      <p><% if (user.exit_answered == true) %>
          <%= image_tag('cheque.png') %>
        <%else%>
          <%= image_tag('cancelar.png') %>
        <%end%></p>
    </td>
    <% end %>
  </div>


