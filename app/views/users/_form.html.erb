<%= form_with(model: user) do |form| %>


  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :email, style: "display: block" %>
    <%= form.text_field :email %>
  </div>

  <div>
    <%= form.label :sis_id, style: "display: block" %>
    <%= form.text_field :sis_id %>
  </div>

  <div>
    <%= form.label :university, style: "display: block" %>
    <%= form.text_field :university %>
  </div>

  <div>
    <%= form.label :course_code, style: "display: block" %>
    <%= form.text_field :course_code %>
  </div>

  <div>
    <%= form.label :initial_active, style: "display: block" %>
    <%= form.check_box :initial_active %>
  </div>

  <div>
    <%= form.label :initial_answered, style: "display: block" %>
    <%= form.check_box :initial_answered %>
  </div>

  <div>
    <%= form.label :midterm_active, style: "display: block" %>
    <%= form.check_box :midterm_active %>
  </div>

  <div>
    <%= form.label :midterm_answered, style: "display: block" %>
    <%= form.check_box :midterm_answered %>
  </div>

  <div>
    <%= form.label :exit_active, style: "display: block" %>
    <%= form.check_box :exit_active %>
  </div>

  <div>
    <%= form.label :exit_answered, style: "display: block" %>
    <%= form.check_box :exit_answered %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
